<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/foodie_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/foodie_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFoodPlannerApp"
        tools:targetApi="31">
        <activity
            android:name=".HomeActivity.GuestMainActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity.randomMealActivity"
            android:exported="false" />
        <activity
            android:name=".FavoriteMealsActivity.FavoriteMealsActivity"
            android:exported="false" />
        <activity
            android:name=".MealDetailActivity.MealDetailActivity"
            android:exported="false" />
        <activity
            android:name=".SearchActivity.srchActivity"
            android:exported="false" />
        <activity
            android:name=".Auth.loginActivity"
            android:exported="false" />
        <activity
            android:name=".Auth.rgstrActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>